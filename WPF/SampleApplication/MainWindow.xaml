        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApplication"
        mc:Ignorable="d"
        Title="SampleWindow" Height="350" Width="500" FontSize="14">
    <DockPanel Margin="4">
        <TextBox DockPanel.Dock="Top"
                 TextWrapping="Wrap" Margin="4" Padding="2"
                 Text="ウィンドウの上に張り付くテキストボックス"/>
        <TextBox DockPanel.Dock="Bottom"
                 TextWrapping="Wrap" Margin="4" Padding="2"
                 Text="ウィンドウの上に張り付くテキストボックス"/>
        <Button Content="多言語対応環境" Margin="4" Padding="2"/>
        <TextBox TextWrapping="Wrap" Margin="4" Padding="2" 
                 Text="真ん中の領域いっぱいに広がるテキストボックス"/>
        
    </DockPanel>
</Window>
